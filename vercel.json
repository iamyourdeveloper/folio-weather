{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"
      }
    },
    {
      "src": "backend/api/index.mjs",
      "use": "@vercel/node"
    },
    {
      "src": "backend/api/[...path].mjs",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api$",
      "dest": "/backend/api/index.mjs"
    },
    {
      "src": "/api/(.*)",
      "dest": "/backend/api/[...path].mjs"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
