# Backend Server Configuration
PORT=8000                                          # Port number for the Express.js server to listen on (8000 is used to avoid conflicts with frontend)

# Application Environment Settings
NODE_ENV=development                               # Node.js environment mode (development/production) - affects logging, debugging, and error handling

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/weather-app  # MongoDB connection string - points to local MongoDB instance on default port 27017 with database name 'weather-app'

# OpenWeatherMap API Configuration
OPENWEATHER_API_KEY=b12265d01881b865932694e3950ffd1f  # API key for OpenWeatherMap service - required for all weather data requests (this is a demo key)
OPENWEATHER_BASE_URL=https://api.openweathermap.org/data/2.5  # Base URL for OpenWeatherMap API endpoints - version 2.5 is the current stable API

# CORS and Frontend Configuration
FRONTEND_URL=http://localhost:3000                 # Frontend application URL for CORS configuration - allows the React app to make requests to this backend

# Security Configuration
JWT_SECRET=your_super_secret_jwt_key_here          # Secret key for JSON Web Token encryption/decryption - used for user authentication (should be changed in production)